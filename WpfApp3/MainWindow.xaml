<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:WpfApp3.Properties.Langs"
           Title="Spaceship" Height="615" Width="540">

    <Canvas Background="LightBlue" Name="MyCanvas" KeyDown="onKeyDown" KeyUp="onKeyUp" Focusable="True">

       
        <Rectangle Name="player" Height="50" Width="60" Fill="Yellow" Canvas.Left="222" Canvas.Top="495"/>

        <Label Content="{x:Static language:Lang.score}" FontSize="18" FontWeight="Bold"  Canvas.Top="45"  Foreground="White"/>
        <Label Name="scoreText"  FontSize="18" FontWeight="Bold"  Canvas.Top="45" Canvas.Left="53"  Foreground="White"/>
        <Label Content="{x:Static language:Lang.damage}" FontSize="18" FontWeight="Bold"  Foreground="White"/>
        <Label Name="damageText" FontSize="18" FontWeight="Bold" Canvas.Left="75"  Foreground="White"/>


    </Canvas>


</Window>